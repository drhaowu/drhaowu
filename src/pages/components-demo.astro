---
// 组件演示页面 - 展示统一的Liquid Glass风格
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>Components Demo - Liquid Glass Design</title>
</head>
<body>
  <!-- 动态背景 -->
  <div class="dynamic-bg">
    <img src="/assets/videos/background.gif" alt="Background" class="bg-video">
    <div class="bg-overlay"></div>
  </div>

  <!-- 导航栏 -->
  <Header />

  <!-- Hero区域 -->
  <Hero />

  <!-- Features区域 -->
  <Features />

  <!-- 演示区域 -->
  <section class="demo-section">
    <div class="container">
      <h2 class="section-title">Component Showcase</h2>
      
      <!-- 卡片演示 -->
      <div class="demo-grid">
        <div class="liquid-glass-card">
          <h3 class="text-component--title text-component--glass-strong">Liquid Glass Card</h3>
          <p class="text-component--description text-component--glass">
            Beautiful translucent cards with backdrop blur effects and smooth animations.
          </p>
          <a href="#" class="btn btn--glass">Learn More</a>
        </div>
        
        <div class="card-component">
          <h3 class="text-component--title">Traditional Card</h3>
          <p class="text-component--description">
            Clean white cards with subtle shadows and hover effects.
          </p>
          <a href="#" class="btn btn--primary">Explore</a>
        </div>
      </div>

      <!-- 按钮演示 -->
      <div class="button-demo">
        <h3 class="demo-subtitle">Button Styles</h3>
        <div class="button-group">
          <a href="#" class="btn btn--glass">Glass Button</a>
          <a href="#" class="btn btn--primary">Primary Button</a>
        </div>
      </div>

      <!-- 文字样式演示 -->
      <div class="text-demo">
        <h3 class="demo-subtitle">Text Styles</h3>
        <div class="text-examples">
          <h4 class="text-component--title text-component--glass-strong">Glass Title</h4>
          <p class="text-component--description text-component--glass">Glass description text with shadow effects.</p>
          <h4 class="text-component--subtitle text-component--glass-title">Glass Subtitle</h4>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer />

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    @import '../styles/variables.css';
    @import '../styles/components.css';

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      overflow-x: hidden;
    }

    body {
      font-family: 'Inter', sans-serif;
      color: #ffffff;
      line-height: 1.6;
      overflow-x: hidden;
    }

    /* 动态背景 */
    .dynamic-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .bg-video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.6;
      filter: brightness(1.2) contrast(0.9);
      animation: slowLoop 8s ease-in-out infinite;
    }

    .bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.1);
    }

    @keyframes slowLoop {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    /* 演示区域 */
    .demo-section {
      padding: 4rem 0;
      background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
      min-height: 100vh;
    }

    .demo-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .button-demo {
      margin-bottom: 3rem;
    }

    .demo-subtitle {
      font-size: 1.5rem;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 1rem;
      text-align: center;
    }

    .button-group {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .text-demo {
      max-width: 600px;
      margin: 0 auto;
    }

    .text-examples {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 2rem;
      text-align: center;
    }

    @media (max-width: 768px) {
      .demo-grid {
        grid-template-columns: 1fr;
      }

      .button-group {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</body>
</html>

<script>
  // 平滑滚动
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // 导航栏滚动效果
  window.addEventListener('scroll', () => {
    const navbar = document.querySelector('.navbar');
    if (navbar) {
      if (window.scrollY > 100) {
        navbar.style.background = 'rgba(0, 0, 0, 0.5)';
        navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.3)';
      } else {
        navbar.style.background = 'rgba(0, 0, 0, 0.3)';
        navbar.style.boxShadow = 'none';
      }
    }
  });
</script>
</html> 